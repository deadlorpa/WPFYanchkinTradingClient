<UserControl x:Class="WPFYanchkinTradingClient.UI.Controls.DealerSmallCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFYanchkinTradingClient.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="50">
    <Border
        BorderThickness="0"
        Background="Transparent">
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Path
                Margin="6 0 0 0"
                Height="13"
                Width="13"
                Stretch="Uniform"
                Fill="{Binding Status, Converter={StaticResource DealerStatusesToColorConverter},Mode=OneWay}"
                Data="{DynamicResource UserCard}"/>
            <TextBlock
                Padding="3 0 0 0"
                FontSize="11"
                Foreground="AliceBlue"
                Text="{Binding Name}"/>
        </StackPanel>
    </Border>
</UserControl>
