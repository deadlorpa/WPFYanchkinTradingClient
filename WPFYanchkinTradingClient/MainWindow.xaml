        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:wpfyanchkintradingclient="clr-namespace:WPFYanchkinTradingClient"
        mc:Ignorable="d"
        Title="Yanchkin Trade" Height="450" Width="800" Icon="/UI/Images/Icons/Logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
